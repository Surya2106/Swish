#include<stdio.h>
#include<math.h>
typedef long long ll;

int main()
{
    ll price,dis,per;
    scanf("%lld %lld",&price,&dis);
    ll ans=price;
    while(1)
    {
        per = ((price*dis)/100);
        if(per==0)
            break;
        price-=per;
        ans+=price;
    }
    printf("%lld",ans);
}
